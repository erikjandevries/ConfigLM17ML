clear
echo "Testing with a virtualenv"
mkdir test-virtualenv
cd test-virtualenv
virtualenv env
source env/bin/activate

pip install -U numpy
pip install -U scipy
pip install -U matplotlib
pip install -U scikit-learn

echo ""
echo "pip list inside virtualenv"
pip list

deactivate
cd ..
rm -r test-virtualenv

echo ""
echo "pip list systemwide"
pip list

